    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="Receive"
        android:layout_marginTop="5dip" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:id="@+id/clearData"
        android:layout_weight="1"
        android:layout_marginTop="2dip"
        android:singleLine="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Notif"
            android:id="@+id/btnCreateNotify"
            android:onClick="buttonClicked" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClearA"
            android:id="@+id/btnClearNotify"
            android:onClick="buttonClicked" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListNotif"
            android:id="@+id/btnListNotify"
            android:onClick="buttonClicked" />
    </LinearLayout>




    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:text="Wave Type"
        android:layout_marginTop="5dip" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_sine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waveSine"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waveSquare"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_saw_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waveSawA"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_saw_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waveSawD"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_noise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waveNoise"
            android:onClick="onRadioButtonClicked"/>


    </RadioGroup>

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFreq"
        android:text="Frequency"
        android:layout_marginTop="5dip" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarFreq"
        android:progress="8"
        android:max="255"/>


    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAmplitude"
        android:text="Amplitude"
        android:layout_marginTop="5dip" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarAmp"
        android:progress="255"
        android:max="255"/>

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDuty"
        android:text="Duty Cycle"
        android:layout_marginTop="5dip" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarDuty"
        android:progress="32"
        android:max="255"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:id="@+id/textView8" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dataLayout"></LinearLayout>


</LinearLayout>
</ScrollView>